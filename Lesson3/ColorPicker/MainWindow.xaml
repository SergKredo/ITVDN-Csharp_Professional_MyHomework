<Window x:Name="MainWindows" x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Windows_Loading">
    <Grid>
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="184,239,0,0" VerticalAlignment="Top" Width="158" Height="36" FontSize="20" Background="#FF8EC560" Click="button_Click"/>
        <Label x:Name="label" Content="test" HorizontalAlignment="Left" Margin="19,18,0,0" VerticalAlignment="Top" Width="474" Height="80" BorderBrush="Black" BorderThickness="1" Background="White" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor=""/>
        <xctk:ColorPicker x:Name="colorPicker" Margin="167,142,138,141" Background="White" SelectedColorChanged="ChangeColor"/>
    </Grid>
</Window>
