<Window x:Class="Currency_Info.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:Currency_Info.ViewModels"
        xmlns:local="clr-namespace:Currency_Info"
        mc:Ignorable="d"
        Title="Currency Info" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFA233" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <c:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <c:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="139"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="128*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#FF595757" BorderThickness="0,0,2,0" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="271" Grid.RowSpan="3" Background="#FFEEEEEE" Margin="0,1,0,-1"/>

        <Button x:Name="updateButton" Content="Обновить" Grid.Column="1" Margin="10,9,10.2,9" Command="{Binding GetCurrenciesCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
        <ProgressBar Grid.Column="1" Grid.Row="1" Margin="10,0,10.2,0" Visibility ="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" IsIndeterminate="True"/>
        <ComboBox x:Name="comboBoxOrgTipes" Margin="10,0,416,285" ItemsSource = "{Binding BankOrExchangers}" 
            DisplayMemberPath="Org_Types"
            SelectedValue="{Binding BankOr}"
            IsSynchronizedWithCurrentItem="True" Grid.Row="2" Height="25" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="comboBoxCurrencies" Margin="10,0,416,347" ItemsSource = "{Binding Currencies}" 
            DisplayMemberPath="CurrentCurrencies"
            SelectedValue="{Binding CurrentCurrencies}"
            IsSynchronizedWithCurrentItem="True" Grid.RowSpan="2" Grid.Row="1"/>
        <Label Content="Валюта" HorizontalAlignment="Left" Margin="61,7,0,13" Width="111" Foreground="Black" FontSize="20" FontFamily="Calibri" Grid.RowSpan="2"/>
        <Label Content="Банк|Обменник" HorizontalAlignment="Left" Margin="41,0,0,311" VerticalAlignment="Bottom" Width="170" Height="34" Foreground="Black" FontSize="20" FontFamily="Calibri" Grid.Row="2"/>
        <ComboBox x:Name="comboBoxRegion" Margin="10,0,416,218" ItemsSource = "{Binding RegionCurrencies}" 
            DisplayMemberPath="Region"
            SelectedValue="{Binding Region}"
            IsSynchronizedWithCurrentItem="True" Grid.Row="2" Height="25" VerticalAlignment="Bottom"/>
        <Label Content="Область" HorizontalAlignment="Left" Margin="32,0,0,246" VerticalAlignment="Bottom" Width="170" Height="34" Foreground="Black" FontSize="20" FontFamily="Calibri" Grid.Row="2"/>

    </Grid>
</Window>
